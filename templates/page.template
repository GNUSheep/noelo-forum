<!doctype html>
<html lang="en">
<head>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="referrer" content="always" />
  <meta name="theme-color" content="#ADADAD" />
  <link rel="shortcut icon" href="/favicon.ico" />
  <title>NO ELO - Forum</title>
  <link rel="stylesheet" href="/content/style.css" media="all" />
</head>
<body>
  <header>
    {{if .IsLoggedIn}}
        <a class="login-indicator">{{ .Username }}</a>
    {{else}}
      <a class="login-indicator" href="/login">Login</a>
    {{end}}
    <h1>
      <img style="width: 50px; height: 50px; image-rendering: pixelated;" src="/favicon.ico" alt="NO ELO Icon">
      <div>NO ELO</div>
    </h1>
    <nav>
      <a class="{{ if eq .PageName "active" }}active{{ end }}" href="/active">Aktywne</a>
      <a class="{{ if eq .PageName "news" }}active{{ end }}" href="/news">Newsy</a>
      <a class="{{ if eq .PageName "projects" }}active{{ end }}" href="/projects">Projekty</a>
      <a class="{{ if eq .PageName "random" }}active{{ end }}" href="/random">Random</a>
    </nav>
  </header>
  <main>
    {{template "pagecontent" .Content}}
  </main>
</body>
</html>
